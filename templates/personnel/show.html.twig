{% extends 'base.html.twig' %}

{% block title %}Personnel{% endblock %}

{% block body %}
    <h1>Personnel</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ personnel.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ personnel.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ personnel.prenom }}</td>
            </tr>
            <tr>
                <th>Post</th>
                <td>{{ personnel.post }}</td>
            </tr>
            <tr>
                <th>Chef</th>
                <td> {% if personnel.chef != null %}
                        <a href="{{ path('personnel_show', {'id': personnel.chef.id}) }}">{{ personnel.chef }}</a>
                    {% endif %}</td>
            </tr>
            <tr>
                <th>Sbire</th>
                <td>
                    <ul>
                        <li>
                            {% for s in personnel.sbires %}
                                <a href="{{ path('personnel_show', {'id': s.id}) }}">{{ s }}</a>
                            {% endfor %}
                        </li>
                    </ul>
                </td>
            </tr>

        </tbody>
    </table>

    <a href="{{ path('personnel_index') }}">back to list</a>

    <a href="{{ path('personnel_edit', {'id': personnel.id}) }}">edit</a>

    {{ include('personnel/_delete_form.html.twig') }}
{% endblock %}
